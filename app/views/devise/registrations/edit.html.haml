.text-center.mb-0.bg-secondary.h-100.py-5.pt-5.pb-5{:style => "background-size: cover; background-position: left top; background-repeat: repeat;"}
  .container
    .row{:style => ""}
      .mx-auto.col-md-6.col-10.bg-white.p-5.bg-secondary
        %h2
          Editar Perfil
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Descripción", class:"width-f"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}

          .form-group
            = f.password_field :current_password, autocomplete: "current-password", placeholder: "Contraseña actual", class:"width-f"
          .form-group
            = f.password_field :password, autocomplete: "new-password", placeholder: "Nueva Contraseña", class:"width-f"
          .form-group
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirma tu contraseña", class:"width-f"
          .form-group
            = f.text_field :name, placeholder: "Nombre", class:"width-f"
          .form-group
            = f.text_field :last_name, placeholder: "Apellido", class:"width-f"  
          .form-group
            = f.text_field :age, placeholder: "Edad", class:"width-f"
          .form-group.text-left
            Imagen de perfil
            = f.file_field :img, placeholder: "Foto de perfil", class:"width-f"   
          .form-group
            = f.text_field :state, placeholder: "Región", class:"width-f"    
          .form-group
            = f.text_field :city, placeholder: "Ciudad", class:"width-f"
          .form-group
            = f.text_field :street, placeholder: "Calle", class:"width-f"
          
          .form-group
            = f.submit "Actualizar", class:"btn btn-secondary mx-2 w-30"
            = link_to "Volver", :back, class:"btn btn-secondary mx-2 w-30"
          .form-group
            #{button_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger w-40" }

