.text-center.mb-0.bg-secondary.h-100.py-5.pt-5.pb-5{:style => "background-size: cover; background-position: left top; background-repeat: repeat;"}
  .container
    .row{:style => ""}
      .mx-auto.col-md-6.col-10.bg-white.p-5.bg-secondary
        %h2 Iniciar Sesión
        
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            %br/
          .field
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"width-f"
            %br/
          .field
            %br/
            
          .field
            = f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña", class:"width-f"
            = render "devise/shared/links"
            
         
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me

              = f.label "Recordarme"
              %br/ 
              = f.submit "Iniciar sesión", class:"btn btn-secondary mx-2 w-30"
              .field
              %br/     
        
